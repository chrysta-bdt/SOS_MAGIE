<div class="container" id="banner-new">
	<div class="col-5 offset-4">
		<div class="box-shadow">
			<h2 id="title-new-service">Cr√©er un nouveau service<h2>

			<%= simple_form_for(@service) do |f| %>
				<%= f.input :name, label: false, placeholder: 'Name' %>
				<%= f.input :category, collection: Service::CATEGORIES, label: false, prompt: 'Choose a category' %>
				<%= f.input :description, label: false, placeholder: 'Description' %>
				<%= f.input :price, label: false, placeholder: 'Price' %>
				<%= f.submit class: 'btn btn-primary' %>
			<% end %>

			<%= link_to 'Back to home', '/', class: 'btn btn-outline-primary' %>
		</div>
	</div>
</div>
